---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = "builder. homelabber. bodyhacker. vibecoding since atari st.",
  ogImage = "/meltforce.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/meltforce.png" />
    <link rel="canonical" href={canonicalURL} />

    <title>{title === "meltforce" ? title : `${title} — meltforce`}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta
      property="og:title"
      content={title === "meltforce" ? title : `${title} — meltforce`}
    />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta
      name="twitter:title"
      content={title === "meltforce" ? title : `${title} — meltforce`}
    />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="meltforce"
      href="/feed.xml"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
