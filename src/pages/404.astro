---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Base title="404">
  <Header />
  <main class="not-found">
    <h1>404</h1>
    <p>Nothing here.</p>
    <a href="/">&larr; back home</a>
  </main>
  <Footer />
</Base>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    gap: 0.5rem;
  }

  .not-found h1 {
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-muted);
  }

  .not-found p {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .not-found a {
    margin-top: 1rem;
    font-size: 0.85rem;
  }
</style>
